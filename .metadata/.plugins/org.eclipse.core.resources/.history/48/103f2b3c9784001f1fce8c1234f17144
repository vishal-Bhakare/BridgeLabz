package DSA;

class Node {

	Object data;
	Node next;

	public Node(Object data) {
		this.data = data;
		this.next = null;
	}
}

public class LinkList {

	private Node head;

	public void add(Object data) {

		Node nd = new Node(data);

		if (head == null) {

			head = nd;

		} else {

			Node current = head; // just hold the value

			while (current.next != null) {

				current = current.next; // link the 1st node to 2nd node

			}

			current.next = nd;
		}
	}

	public void dispaly() {

		if (head == null) {

			System.out.println("List Is Empty ");

			return;
		}

		Node current = head;

		while (current != null) {

			System.out.print(current.data + " ---> ");

			current = current.next;

		}

	}

	public void delete(Object data) {

		if (head == null) {

			System.out.println("List is Emplty ");
			return;
		}

		if (head.data == data) {
			head = head.next;
			return;
		}

		Node current = head;
		Node previous = null;

		while (current != null && current.data != null) {

			previous = current;
			current = current.next;

		}

		if (current == null) {

			System.out.println("Node with data " + data + " not found.");

			return;
		}

	}

	public static void main(String[] args) {

		LinkList l = new LinkList();

		l.add("VISHAl");
		l.add(10);
		l.add(50);
		l.add("Saurabh");
		l.add("Sahil");

		l.dispaly();

	}

}
