			System.out.println("3. Update Person");
			System.out.println("4. Delete Person");
			System.out.println("5. Exit");
			System.out.print("Enter your choice: ");

			int ch = sc.nextInt();

			switch (ch) {
			case 1:

				break;

			case 2:

				break;

			case 3:

				break;
			case 4:

				break;

			case 5:

				break;

			default:
				break;
			}

		}
	}

}
