package DSA;

class Node {

	Object data;
	Node next;

	public Node(Object data) {
		this.data = data;
		this.next = null;
	}
}

public class LinkList {

	private Node head;

	public void add(Object data) {

		Node nd = new Node(data);

		if (head == null) {
			head = nd;
		} else {

			Node current = head; // just hold the value

			while (current.next != null) {

				current = current.next; // link the 1st node to 2nd node

			}

			current.next = nd;
		}

	}

}
